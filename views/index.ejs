<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title></title>
  </head>
  <body>        
    <% if (locals.user) {%>
    <h1>WELCOME BACK <%= user.username %> ðŸŽ‰</h1>
    <a href="/become-member">become a member</a>
    <a href="/log-out">LOG OUT</a>
    <h3>hello <%= user.firstname %><%= user.lastname %></h3>

    <form action="/add-text" method="POST">
      <label for="postText">Add a Text:</label>
      <textarea
        id="postText"
        name="postText"
        rows="4"
        cols="50"
        placeholder="Write your text here..."
        required
      ></textarea>
      <button type="submit">Submit Text</button>
    </form>

    <h2>Posts</h2>
    <% if (posts && posts.length) { %>
    <ul>
  <% posts.forEach(function(post) { %>
    <li>
      <% if (user && user.membership === 'admin') { %>
        <strong><%= post.username %></strong>
        <form action="/delete-post/<%= post.id %>" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      <% } else { %>
        <strong>Unknown</strong>
      <% } %>

      <p><%= post.text %></p>
    </li>
  <% }) %>
</ul>

    <% } else { %>
    <p>No posts yet.</p>


    <% } %> <% } else { %>
    <h1>please log in</h1>
    <form action="/log-in" method="POST">
      <label for="username">Username</label>
      <input id="username" name="username" placeholder="username" type="text" />
      <label for="password">Password</label>
      <input id="password" name="password" type="password" />
      <button>Log In</button>
    </form>
    <a href="/sign-up">Don't have an account? sign up here!</a>
    <%}%>
    <br />
  </body>
</html>
